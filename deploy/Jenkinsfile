pipeline{
    agent any
    stages{
        stage("Choose Commit"){
            steps{
                input(message: "Commit:",parameters:[$class: 'TextParameterDefinition', defaultValue: "${GIT_COMMIT}", description: 'choose commit to deploy', name:"deployCommit"])
                echo("Deploying " +userInput)
            }
        }
        stage("Show Comit"){
            steps{
                echo "bla..."
            }
        }
    }
}