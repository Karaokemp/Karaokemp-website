pipeline{
    agent any
    stages{
        stage("Choose Commit"){
            steps{
                input(message: "Commit:",parameters: [string(name: 'DEPLOY_COMMIT', defaultValue: "${GIT_COMMIT}", description: 'choose specific commit to deploy')])
            }
        }
        stage("Show Comit"){
            steps{
                echo "Deploying ${DEPLOY_COMMIT}"
            }
        }
    }
}